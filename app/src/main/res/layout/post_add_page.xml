<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/post_imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/content_ET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <EditText
        android:id="@+id/content_ET"
        android:layout_width="351dp"
        android:layout_height="121dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Content"
        android:inputType="text"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/post_imageView"
        app:layout_constraintBottom_toTopOf="@+id/tag_AutoTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/tag_AutoTV"
        android:layout_width="249dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="이름을 입력하세요"
        android:dropDownAnchor="@+id/tag_AutoTV"
        android:dropDownHeight="500dp"
        android:completionThreshold="1"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag_list_TV"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/post_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/post_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="169dp"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="YYYY/MM/DD HH:MM:SS"
        app:layout_constraintBottom_toTopOf="@+id/post_imageView"
        app:layout_constraintEnd_toStartOf="@+id/post_upload_btn"
        app:layout_constraintStart_toEndOf="@+id/post_cancel_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tag_list_TV"
        android:layout_width="359dp"
        android:layout_height="42dp"
        android:background="#00FF00"
        android:hint="tag"
        app:layout_constraintBottom_toTopOf="@+id/tag_AutoTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_ET" />
</androidx.constraintlayout.widget.ConstraintLayout>